<h1>Catégories</h1>
<br />
<table>
<% @maingalls.each do |maingall| %>
  <tr>
    <td><%= maingall.name %></td>
    <td><%= maingall.description %></td>
    <td><%= link_to 'Voir la catégorie', maingall %></td>
    <% if admin_signed_in? %>
    <td><%= link_to 'Editer', edit_maingall_path(maingall) %></td>
    <td><%= link_to 'Suppression catégorie + galerie', maingall_path(:id => maingall.id, :des => 1), :confirm => 'Are you sure?', :method => :delete %></td>
    <td><%= link_to 'Suppression catégorie seule', maingall_path(:id => maingall.id, :des => 2), :confirm => 'Are you sure?', :method => :delete %></td>
    <td><%= link_to 'Ajouter une galerie', new_gallery_path(:maingall => maingall.id)%></td>
    <% end %>
  </tr>
<% end %>
</table>
<br />
<h1>Galeries seules</h1>
<br />
<table>
<% @single_gal.each do |gallery| %>
  <tr>
	<td><%= gallery.name %></td>
    <td><%= gallery.description %></td>
    <td><%= link_to 'Voir la galerie', gallery %></td>
    <% if admin_signed_in? %>
    <td><%= link_to 'Edition', edit_gallery_path(gallery) %></td>
    <td><%= link_to 'Supprimer', gallery, :confirm => 'Êtes-vous sûr?', :method => :delete %></td>
    <td><%= link_to 'Nouvelle Photo', new_picture_path(:gallery => gallery.id)%></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<% if admin_signed_in? %>
<%= link_to 'Nouvelle catégorie', new_maingall_path %><br />
<%= link_to 'Créer une galerie seule', new_gallery_path %>
<% end %>

