<h1>Listing pictures</h1>

<table>
  <tr>
    <th>User</th>
    <th>Gallery</th>
    <th>Name</th>
    <th>Description</th>
    <th>Size</th>
    <th>Pic</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pictures.each do |picture| %>
  <tr>
    <td><%= picture.user_id %></td>
    <td><%= picture.gallery_id %></td>
    <td><%= picture.name %></td>
    <td><%= picture.description %></td>
    <td><%= picture.size %></td>
    <td><%= image_tag picture.image_url(:thumb) if picture.image? %></td>
    <td><%= link_to 'Show', picture %></td>
    <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
    <td><%= link_to 'Destroy', picture, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Picture', new_picture_path %>
