<h1>Photos</h1>

<table>
  <tr>
    <th>Auteur(user)</th>
    <th>Auteur(admin)</th>
    <th>Galerie</th>
    <th>Titre</th>
    <th>Description</th>
    <th>Taille</th>
    <th>Photo</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pictures.each do |picture| %>
  <% if picture.image? %>
  <tr>
    <td><%= picture.user.username rescue "" %></td>
    <td><%= picture.admin.nick rescue "" %></td>
    <td><%= picture.gallery_id %></td>
    <td><%= picture.name %></td>
    <td><%= picture.description %></td>
    <td><%= link_to image_tag(picture.image_url(:thumb)), picture.image_url, :"data-lightbox"=>"all", :"data-title"=>picture.description, :class=>"lightimage" %></td>
    <td><%= link_to 'Voir', picture %></td>
    <td><%= link_to 'Editer', edit_picture_path(picture) %></td>
    <td><%= link_to 'Supprimer', picture, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
  <% end %>
<% end %>
</table>

