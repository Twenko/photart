<h1>Brèves</h1>
<% @posts.each do |post| %>
  <div>
    <%= post.context %>
  </div>
  <div>
    Ecrit par: <%= post.poster_id %>
  </div>
<% end %>
<table>
  <tr>
    <th>Poster</th>
    <th>Adorus</th>
    <th>Gallery</th>
    <th>Picture ids</th>
    <th>Edition</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= User.find(:first, :conditions => ["id = ?", post.poster_id]).username %></td>
    <td><%= post.adorus %></td>
    <td><%= post.gallery_id %></td>
    <td><%= post.picture_ids %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Publier une nouvelle brève', new_post_path %>
