<!DOCTYPE html>
<html>
<head>
  <title>Chatonreiller</title>
  <%= stylesheet_link_tag    "application", "amagraph", :media => "all", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag    "application", "decoimage", :media => "all", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag    "application", "lightbox", :media => "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "pictures" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="header-wrapper" style="text-align: center">
	<div id="header">
		<div id="logo">
			<%= link_to image_tag("chatoncrevette.jpg", :alt => "C'pas d'pot si tu peux pas voir", :id => "logo-image"), root_path %>
		</div>
		<div id="menu">
			
			  <% if controller_name == 'portal' %>
			  	<span class="activemenu">
			  <% else%>
			  	<span>
			  <% end %>
			  	<%= link_to 'Accueil', root_path %></span>
			  <% if (controller_name == 'maingalls')||(controller_name == 'galleries') %>
			  	<span class="activemenu">
			  <% else%>
			  	<span>
			  <% end %>
			  	<%= link_to "Galeries", maingalls_path %></span>
	<% unless (user_signed_in? || admin_signed_in?) %>
		<% if controller_name == 'registrations' %>
			<span class="activemenu">
		<% else%>
			<span>
		<% end %>
		<%= link_to "Inscription", new_user_registration_path %></span>
		
		<% if controller_name == 'sessions' %>
		  	<span class="activemenu">
		<% else%>
		  	<span>
		<% end %>
		<%= link_to "Connexion", new_user_session_path %></span>
	<% end %>
	<% if user_signed_in? %>
		<% if controller_name == 'user' %>
		  	<span class="activemenu">
		<% else%>
		  	<span>
		<% end %>
		<%= link_to "Mon Compte", userprofil_path %></span>
		<span><%= link_to 'Déconnexion', destroy_user_session_path, :method => :delete %></span>
	<% end %>
	<% if admin_signed_in? %>
		<% if controller_name == 'admin' %>
			<span class="activemenu">
		<% else%>
			<span>
		<% end %>
		<%= link_to "Mon Compte(Admin)", adminprofil_path %></span>
		<span><%= link_to 'Déconnexion', destroy_admin_session_path, :method => :delete %></span>
	<% end %>
			
		</div>
	</div>
  </div>
